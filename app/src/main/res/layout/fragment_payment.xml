<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.themallbd.workspaceit.fragment.PaymentFragment"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Choose your Payment method"
            android:background="#911414"
            android:textColor="#FFFFFF"
            android:paddingLeft="20dp"
            android:padding="5dp"
            android:textSize="20dp"/>


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="10dp"
           android:background="@drawable/custom_border">
           <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:id="@+id/radio_payment_method_group">



           </RadioGroup>

       </LinearLayout>


    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="I confirm my order"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#412E2E"
        android:textColor="#FFFFFF"
        android:id="@+id/confrim_final_order_button"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/debug"/>

</LinearLayout>
