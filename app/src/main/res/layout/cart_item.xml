<LinearLayout
    android:layout_height="180dp"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/cart_item_imageView"
            android:contentDescription="sdf"
            android:scaleType="fitStart"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textSize="@dimen/material_text_body1"
            android:id="@+id/cart_item_name_tv"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:layout_weight=".2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textSize="14sp"
                android:id="@+id/cart_item_price_tv"
                android:singleLine="true"
                android:textColor="#911414"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sub Total:"
                android:layout_weight=".2"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="12345 BDT"
                android:textColor="#911414"
                android:singleLine="true"
                android:layout_weight=".8"
                android:id="@+id/single_sub_total_text_view"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:id="@+id/addButton"
            android:layout_gravity="center"
            android:padding="30dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/an_arrow_upg"

            />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#F2F2F2"
            android:id="@+id/quantityTextView"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical"


            android:textColor="#911414"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_marginTop="1dp"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:id="@+id/minusButton"
            android:layout_gravity="center"
            android:background="@drawable/an_arrow_down"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_gravity="center">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="right"
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/cart_delete_btn"
            android:background="@drawable/cross_new"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp" />
    </LinearLayout>
</LinearLayout>