<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/container_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEE">
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="#EEE">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/mainLayout"
                android:background="#F6F6F6"
                tools:context=".activity.MainActivity">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:paddingBottom="5dp"
                    android:background="#8C1C1E"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/search_in_home"
                        android:background="@drawable/rounded_edittext"
                        android:layout_margin="6dp"
                        android:drawablePadding="10dp"
                        android:hint="Search"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:paddingLeft="15dp"
                        android:paddingStart="15dp"
                        android:textSize="@dimen/material_text_body1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayoutMainSlider">

                    <com.daimajia.slider.library.SliderLayout
                        android:id="@+id/slider"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:id="@+id/linearLayoutMainCategory"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dip"
                        android:padding="10dp"
                        android:background="#FFFFFF"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="25dp"
                            android:id="@+id/imageView_babyCare"
                            android:contentDescription="@string/baby_care"
                            android:layout_gravity="center"
                            android:src="@drawable/category_baby" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_home_cat_first"
                            android:layout_gravity="center"
                            android:singleLine="true"
                            android:paddingTop="5dp"
                            android:textSize="@dimen/material_text_caption" />

                    </LinearLayout>

                    <View
                        android:orientation="horizontal"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#EEE"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="25dp"
                            android:id="@+id/iv_home_women"
                            android:layout_gravity="center"
                            android:src="@drawable/category_women" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:id="@+id/tv_home_second"
                            android:layout_gravity="center"
                            android:textSize="@dimen/material_text_caption" />
                    </LinearLayout>

                    <View
                        android:orientation="horizontal"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#EEE"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="25dp"
                            android:id="@+id/iv_home_men"
                            android:layout_gravity="center"
                            android:src="@drawable/category_menmen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_home_third"
                            android:layout_gravity="center"
                            android:paddingTop="5dp"
                            android:textSize="@dimen/material_text_caption" />
                    </LinearLayout>

                    <View
                        android:orientation="horizontal"
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="#EEE"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="46dp"
                            android:layout_height="25dp"
                            android:contentDescription="@string/all_category"
                            android:id="@+id/iv_home_all"
                            android:layout_gravity="center"
                            android:src="@drawable/category_all"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="@string/all_category"
                            android:id="@+id/tv_home_all"
                            android:singleLine="true"
                            android:textSize="@dimen/material_text_caption"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/new_product"
                        android:textSize="@dimen/material_text_subhead"
                        android:id="@+id/tv_home_newProducts"
                        android:textAllCaps="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4D4D4D"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold" />
                </LinearLayout>
                <View
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EEE"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:background="#FFFFFF">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/rv_horizontal">
                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginTop="6dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:background="#FFFFFF"
                        android:layout_height="40dp">

                        <TextView
                            android:background="#A31C1F"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="sale"
                            android:textSize="@dimen/material_text_subhead"
                            android:id="@+id/tv_home_sale"
                            android:textAllCaps="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#FFFFFF"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"  />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/banner"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/featured_products"
                        android:textSize="@dimen/material_text_subhead"
                        android:id="@+id/tv_home_featuredProducts"
                        android:textAllCaps="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4D4D4D"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold" />

                </LinearLayout>
                <View
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EEE"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="175dp"
                        android:id="@+id/rv_featured_horizontalProducts" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/products"
                        android:textSize="@dimen/material_text_subhead"
                        android:id="@+id/tv_home_products"
                        android:textAllCaps="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#4D4D4D"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold" />

                </LinearLayout>
                <View
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EEE"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFF">


                    <com.workspaceit.themallbd.utility.AllProductGridView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/gridView_all_Product"
                        android:numColumns="2"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="2dp"
                        android:horizontalSpacing="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:columnWidth="170dp"
                        android:background="#EEE"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/nav_drawer" />

</android.support.v4.widget.DrawerLayout>