<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity"
    tools:openDrawer="start"
    >

    <FrameLayout
        android:id="@+id/container_body"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#888">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />



        <ScrollView
            android:id="@+id/scroll_main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:background="#888">

            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D5D6D9"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                tools:context=".activity.MainActivity">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="#f2f2f2"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:paddingBottom="0dp"
                    >

                    <com.themallbd.workspaceit.view.CustomAutoCompleteTextView
                        android:id="@+id/search_in_home"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:background="@drawable/rounded_edittext"
                        android:drawablePadding="10dp"
                        android:hint="Search"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingLeft="15dp"
                        android:paddingStart="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#000000"
                        android:textSize="@dimen/material_text_body1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutMainSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    >

                    <com.daimajia.slider.library.SliderLayout
                        android:id="@+id/slider"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayoutMainCategory"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageView_babyCare"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:contentDescription="@string/baby_care"

                            />

                        <TextView
                            android:id="@+id/tv_home_cat_first"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textSize="@dimen/material_text_caption"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_home_women"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:id="@+id/tv_home_second"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="5dp"
                            android:textSize="@dimen/material_text_caption" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_home_men"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                             />

                        <TextView
                            android:id="@+id/tv_home_third"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="5dp"
                            android:textSize="@dimen/material_text_caption" />
                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_home_all"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/all_category"
                            android:src="@drawable/category_all" />

                        <TextView
                            android:id="@+id/tv_home_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:text="@string/all_category"
                            android:textSize="@dimen/material_text_caption" />
                    </LinearLayout>

                </LinearLayout>


                <!-- New product Horizontal List START-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_home_newProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight=".9"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/new_product"
                        android:textAllCaps="true"
                        android:textColor="#4D4D4D"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/more_new_product_button"
                        android:layout_width="54dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right|center"
                        android:background="@drawable/button_bg_transparent"
                        android:text="More..."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4D4D4D"
                        android:textSize="14sp"

                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EEE"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="6dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        ></android.support.v7.widget.RecyclerView>

                </LinearLayout>

                <!-- New Product List END -->

                <!-- Feature Product Block START-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/banner" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_home_featuredProducts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight=".9"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/featured_products"
                        android:textAllCaps="true"
                        android:textColor="#4D4D4D"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/more_feature_product_button"
                        android:layout_width="54dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right|center"
                        android:background="@drawable/button_bg_transparent"
                        android:text="More..."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4D4D4D"
                        android:textSize="14sp"

                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EEE"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="6dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_featured_horizontalProducts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <!-- Feature Product List END -->


                <!-- Horizontal Package List Start -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/banner" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight=".9"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/package_text"
                        android:textAllCaps="true"
                        android:textColor="#4D4D4D"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/more_package_list_button"
                        android:layout_width="54dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right|center"
                        android:background="@drawable/button_bg_transparent"
                        android:text="More..."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4D4D4D"
                        android:textSize="14sp"

                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EEE"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="6dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/packge_list_reclyeview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>


                <!-- Horizontal Package List END -->


                <!-- Horizontal Special Product List Start-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight=".9"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/specail_Product_text"
                        android:textAllCaps="true"
                        android:textColor="#4D4D4D"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="54dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right|center"
                        android:background="@drawable/button_bg_transparent"
                        android:text="More..."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#4D4D4D"
                        android:id="@+id/discount_prouct_more_button"
                        android:textSize="14sp"

                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D5D6D9"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="#FFFFFF"
                    android:layout_marginTop="6dp">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/specail_product_recyleiew"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>


                <!-- Spacial Product END-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="6dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_home_products"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="@string/products"
                        android:textAllCaps="true"
                        android:textColor="#4D4D4D"
                        android:textSize="@dimen/material_text_subhead"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#EEE"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical">


                    <com.themallbd.workspaceit.view.CustomGridView
                        android:id="@+id/gridView_all_Product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EEE"
                        android:columnWidth="170dp"
                        android:horizontalSpacing="2dp"
                        android:numColumns="2"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="2dp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dip"
                        android:background="#eee"
                        >

                    </View>

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/grid_view_progress_bar"
                        android:visibility="invisible"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"

        app:menu="@menu/nav_drawer" />
    <fragment android:name="com.themallbd.workspaceit.fragment.NavaigationDrawerFragment"
        android:layout_gravity="start"
        android:id="@+id/nav_drawer_fragment"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        />
</android.support.v4.widget.DrawerLayout>