<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/myacc_scroll"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EAEAEA"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.themallbd.workspaceit.activity.MyAccountActivity"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >



        <android.support.design.widget.CoordinatorLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"



                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#911414"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="@string/account_info"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"

                    android:drawableRight="@drawable/arrow_down"
                    android:id="@+id/acc_info_expand_button"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/acc_info_layout"
                    android:orientation="vertical"
                    android:animateLayoutChanges="true"
                    >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="5dp"
                        android:text="Email"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/email_myacc_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:background="@android:color/transparent"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#b2beb5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="5dp"
                        android:text="First Name"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/fname_myacc_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:background="@android:color/transparent"
                        android:textSize="14sp"
                        android:textColor="#000000" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#b2beb5" />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:text="Last Name"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/lname_myacc_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:textSize="14sp"
                            android:textColor="#000000" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#b2beb5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:text="Phone"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/phone_myacc_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:textColor="#000000" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#b2beb5" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="5dp"
                        android:text="Address"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/address_myacc_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:background="@android:color/transparent"
                        android:textSize="14sp"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:textColor="#000000"
                        android:gravity="top"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#b2beb5" />
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">



                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="15dp"
                            android:entries="@array/countries_array"
                            style="@style/Widget.AppCompat.Spinner.DropDown"
                            android:id="@+id/county_myacc_spinner"

                            >
                        </Spinner>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#b2beb5" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:paddingBottom="5dp"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:text="City"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/city_myacc_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="20dp"
                            android:background="@android:color/transparent"
                            android:textColor="#000000"
                            android:textSize="14sp"/>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:background="#b2beb5" />
                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="5dp"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="Zip Code"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/zipcoe_myacc_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="20dp"
                        android:background="@android:color/transparent"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#b2beb5" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:paddingTop="20dp"
                    >

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/editFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@drawable/pencil"
                        app:backgroundTint="#911414"
                        />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/lockFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@drawable/lock"
                        app:backgroundTint="#911414"
                        />
                </LinearLayout>
                    </LinearLayout>


            </LinearLayout>


        </android.support.design.widget.CoordinatorLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEAEA"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/shipping_address_expand_button"
            android:background="#911414"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/shipping_info"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:drawableRight="@drawable/arrow_down"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:id="@+id/shipping_info_layout">


        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:text="ADD NEW"
            android:background="#343434"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="20dp"
            android:id="@+id/addnew_myacc_button"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:layout_marginTop="15dp"
            android:orientation="vertical">
        <TextView
            android:id="@+id/counter_myacc_textview"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#EAEAEA"
            android:text="1"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="First Name"/>

                <EditText
                    android:id="@+id/firstname_myacc_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Last Name"/>

                <EditText
                    android:id="@+id/lastname_myacc_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="Address"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:lines="4"
                    android:textColor="#000000"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:id="@+id/shipping_info_address_edittxet"/>
                </LinearLayout>

        </LinearLayout>


        </LinearLayout>



        </LinearLayout>



</LinearLayout>

</ScrollView>
