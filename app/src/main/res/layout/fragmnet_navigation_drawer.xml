<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ViewSwitcher
        android:id="@+id/simpleViewSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inAnimation="@anim/slide_in_right"
        android:outAnimation="@anim/slide_out_right">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="Shop For"
                android:textColor="#c1c1c1"
                android:textSize="12sp" />

            <ListView
                android:id="@+id/parent_categoey_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="false"
                android:divider="@null"
                android:background="#FFFFFF"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brands"
                android:background="@android:color/transparent"
                android:gravity="start|center"
                android:layout_marginLeft="15dp"
                android:id="@+id/band_button"
                android:textSize="15sp"
                android:textColor="#7e7e7e"
                android:textAllCaps="false"
                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/custom_border"
                android:paddingTop="5dp"
                android:weightSum="1">

                <ImageButton
                    android:id="@+id/back_button_nav_fragment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"

                    android:layout_marginRight="20dp"
                    android:padding="9dp"
                    android:background="@null"
                    android:src="@drawable/long_arrow_left"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"


                   />

                <TextView
                    android:id="@+id/nav_category_second_page_title"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Men"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:layout_weight=".8"/>
            </LinearLayout>


            <com.themallbd.workspaceit.view.AnimatedExpandableListView

                android:id="@+id/expandable_list_view_nav_fragment"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:drawSelectorOnTop="true"
                android:groupIndicator="@android:color/transparent"
                android:childDivider="#f2f2f2"
                android:divider="@null"



                />

        </LinearLayout>


    </ViewSwitcher>


</LinearLayout>