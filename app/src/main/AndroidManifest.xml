<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.workspaceit.themall" >

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.themallbd.workspaceit.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.themallbd.workspaceit.activity.ProductDetailsActivity"
            android:label="@string/app_name" />
        <activity android:name="com.themallbd.workspaceit.activity.BaseActivity" />
        <activity
            android:name="com.themallbd.workspaceit.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.themallbd.workspaceit.activity.BaseActivityWithoutDrawer" />
        <activity android:name="com.themallbd.workspaceit.activity.CategoryActivity" />
        <activity android:name="com.themallbd.workspaceit.activity.CategoryListViewActivity" />
        <activity android:name="com.themallbd.workspaceit.activity.CategoryInExpandableListViewActivity" />
        <activity android:name="com.themallbd.workspaceit.activity.ProductFromCategoryActivity" />
        <activity
            android:name="com.themallbd.workspaceit.activity.CheckoutActivity"
            android:label="@string/title_activity_checkout"
            android:theme="@style/AppTheme" />
        <activity android:name="com.themallbd.workspaceit.activity.MyAccountActivity" >
        </activity>
        <activity android:name="com.themallbd.workspaceit.activity.ContactUsActivity" >
        </activity>
        <activity
            android:name="com.themallbd.workspaceit.activity.WishListActivity"
            android:label="@string/title_activity_wish_list"
            android:theme="@style/AppTheme" >
        </activity>
        <activity android:name="com.themallbd.workspaceit.activity.ShowRelatedProduct" >
        </activity>
        <activity android:name="com.themallbd.workspaceit.activity.ShowAllReviewActivity" >
        </activity>
        <activity android:name="com.themallbd.workspaceit.activity.SearchProductListActivity" >
        </activity>
    </application>

</manifest>
